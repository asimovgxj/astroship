---
import Contactform from "@/components/contactform.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";

// 记录下：这是最后一项“去 Astro 化”工程，收官之战！
---

<Layout title="Contact | AutoChina.org">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact Us</Fragment>
      <Fragment slot="desc">Global Business & Media Inquiries.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-bold text-2xl text-slate-800">Get in Touch</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          For strategic partnerships, data licensing, or media interviews regarding China's automotive industry, please reach out to our research team.
        </p>
        <div class="mt-8">
          <div class="flex items-center mt-3 space-x-3 text-slate-600 group">
            <div class="bg-emerald-50 p-2 rounded-full group-hover:bg-emerald-100 transition">
               <Icon class="text-emerald-600 w-5 h-5" name="uil:map-marker" />
            </div>
            <span class="text-sm">Beijing / Shanghai / Global Remote</span>
          </div>
          
          <div class="flex items-center mt-4 space-x-3 text-slate-600 group">
            <div class="bg-emerald-50 p-2 rounded-full group-hover:bg-emerald-100 transition">
              <Icon class="text-emerald-600 w-5 h-5" name="uil:envelope" />
            </div>
            <a href="mailto:intelligence@autochina.org" class="text-sm hover:text-emerald-700 transition">
              intelligence@autochina.org
            </a>
          </div>

          <div class="flex items-center mt-4 space-x-3 text-slate-600 group">
            <div class="bg-emerald-50 p-2 rounded-full group-hover:bg-emerald-100 transition">
              <Icon class="text-emerald-600 w-5 h-5" name="uil:phone" />
            </div>
            <span class="text-sm">Strategic Consulting Available Upon Request</span>
          </div>
        </div>
      </div>
      <div class="bg-slate-50 p-6 rounded-xl border border-slate-100">
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
