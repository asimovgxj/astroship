---
// src/pages/about.astro
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";

// 使用十六进制转义符 \x2f 强制生成斜杠，防止被显示引擎过滤
const p1 = "https://images.unsplash.com" + "\x2f"; 
const p2 = "photo-1581091226825-a6a2a5aee158";
const p3 = "?auto=format&fit=crop&w=1200&q=80";
const aboutImage = p1 + p2 + p3;
---

<Layout title="Our Mission | AutoChina.org">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Our Mission</Fragment>
      <Fragment slot="desc">
        Bridging the information gap between China's automotive innovation and the global market.
      </Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16 text-center md:text-left">
      <h2 class="font-bold text-3xl text-slate-900 leading-tight">
        Decoding the New Era of <span class="text-emerald-600">Global Mobility.</span>
      </h2>
      <p class="text-lg leading-relaxed text-slate-500 mt-4">
        AutoChina.org is a premier independent intelligence platform dedicated to providing strategic analysis, real-time data, and deep-dive reporting on China's rapidly evolving automotive landscape. 
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-16 border-t border-slate-100 pt-12">
      <div class="group">
        <h3 class="font-bold text-emerald-600 text-xl tracking-tight">Independent</h3>
        <p class="text-slate-500 mt-2 text-sm leading-relaxed">
          Our research is self-funded and unbiased, ensuring the most accurate market perspective for our global audience.
        </p>
      </div>
      <div class="group">
        <h3 class="font-bold text-emerald-600 text-xl tracking-tight">Data-Driven</h3>
        <p class="text-slate-500 mt-2 text-sm leading-relaxed">
          We leverage proprietary analytics to track real-time export trends, supply chain shifts, and sales performance.
        </p>
      </div>
      <div class="group">
        <h3 class="font-bold text-emerald-600 text-xl tracking-tight">Strategic</h3>
        <p class="text-slate-500 mt-2 text-sm leading-relaxed">
          Beyond headlines, we provide the 'why' and 'how' behind every major industry shift in China's EV sector.
        </p>
      </div>
    </div>

    <div class="mt-20 overflow-hidden rounded-xl shadow-2xl bg-slate-50 border border-slate-100">
      <img
        src={aboutImage}
        alt="Automotive Intelligence Research"
        class="w-full h-[450px] object-cover"
        loading="lazy"
      />
    </div>
  </Container>
</Layout>
