---
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";

// 拼接大法：绕过显示截断
const p1 = "https://images.unsplash.com";
const p2 = "photo-1593941707882-a5bba14938c7";
const p3 = "?auto=format&fit=crop&w=800&q=80";
const heroRemoteImage = p1 + p2 + p3;
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <img
      src={heroRemoteImage}
      alt="AutoChina Technology"
      width="800"
      height="600"
      loading="eager"
      decoding="async"
      class="rounded-2xl shadow-2xl w-full h-auto object-cover aspect-[4/3]"
    />
  </div>
  <div>
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter text-slate-900">
      Decoding <span class="text-emerald-600">China's</span> Automotive Future
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl leading-relaxed">
      Independent research, strategic intelligence, and real-time insights into China's electric vehicle revolution and global expansion strategy.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/blog"
        size="lg"
        class="flex gap-1 items-center justify-center bg-emerald-600 hover:bg-emerald-700 text-white transition border-none px-6"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-zap" />
        Explore Insights
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/about"
        class="flex gap-1 items-center justify-center border-slate-200 hover:border-emerald-600 hover:text-emerald-700 transition px-6">
        <Icon class="text-slate-800 w-4 h-4" name="bx:bxs-file-find" />
        Our Mission
      </Link>
    </div>
  </div>
</main>
