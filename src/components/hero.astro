---
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";

// 这是一个极其干净的方案：不再使用容易产生“黑块”的实景图
// 改用一个具有科技感、半透明、翡翠绿色的新能源图标
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block w-full flex justify-center items-center">
    <!-- 视觉核心：使用一个巨大的、带有渐变感的科技图标，实现 100% 无缝融入白色背景 -->
    <div class="relative w-64 h-64 md:w-80 md:h-80 flex items-center justify-center">
      <!-- 底层装饰圆圈，增加层次感 -->
      <div class="absolute inset-0 bg-emerald-50 rounded-full animate-pulse opacity-50"></div>
      <!-- 核心图标：使用新能源/汽车/电池相关的科技图标 -->
      <Icon 
        name="bx:bxs-zap" 
        class="w-40 h-40 md:w-56 md:h-56 text-emerald-600 opacity-80 relative z-10" 
      />
    </div>
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter text-slate-900 leading-tight">
      Decoding <span class="text-emerald-600">China's</span> Automotive Future
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl leading-relaxed">
      Independent research, strategic intelligence, and real-time insights into China's electric vehicle revolution and global expansion strategy.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <!-- 翡翠绿主按钮 -->
      <Link
        href="/blog"
        size="lg"
        class="flex gap-1 items-center justify-center bg-emerald-600 hover:bg-emerald-700 text-white transition border-none px-8 shadow-lg shadow-emerald-100"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-zap" />
        Explore Insights
      </Link>
      <!-- 次按钮 -->
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/about"
        class="flex gap-1 items-center justify-center border-slate-200 hover:border-emerald-600 hover:text-emerald-700 transition px-8 text-slate-800">
        <Icon class="w-4 h-4" name="bx:bxs-file-find" />
        Our Mission
      </Link>
    </div>
  </div>
</main>
