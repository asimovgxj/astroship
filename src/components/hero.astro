---
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";

// 本版本采用纯代码 SVG 方案，彻底解决图片加载、截断及背景色块问题
---

<!-- 仅修改了这一行的 pt-16->pt-8, pb-8->pb-4, md:pt-12->md:pt-6, md:pb-24->md:pb-10 -->
<main
  class="grid lg:grid-cols-2 place-items-center pt-8 pb-4 md:pt-6 md:pb-10">
  
  <!-- 右侧插画区域：100% 呼吸感、无缝衔接 -->
  <div class="py-6 md:order-1 hidden md:block w-full flex justify-center">
    <div class="relative w-full max-w-lg aspect-square flex items-center justify-center">
      <!-- 底层柔光装饰 -->
      <div class="absolute inset-0 bg-emerald-50 rounded-full blur-3xl opacity-30 animate-pulse"></div>
      
      <!-- 极简科技感 SVG：纯代码构建，绿色能量与未来车身轮廓 -->
      <svg width="400" height="300" viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org" class="relative z-10 drop-shadow-2xl">
        <!-- 模拟底盘与投影 -->
        <ellipse cx="200" cy="240" rx="120" ry="20" fill="#10b981" fill-opacity="0.1"/>
        
        <!-- 极简车身轮廓 (翡翠绿) -->
        <path d="M80 220C80 220 90 160 140 145C190 130 240 130 290 145C340 160 350 220 350 220H80Z" fill="#10b981" fill-opacity="0.9"/>
        
        <!-- 能量舱/车顶 -->
        <path d="M140 145C140 145 155 90 215 90C275 90 290 145 290 145" stroke="#059669" stroke-width="6" stroke-linecap="round"/>
        
        <!-- 科技能量线条 -->
        <path d="M180 180H250" stroke="white" stroke-width="4" stroke-linecap="round" class="animate-pulse"/>
        <circle cx="215" cy="180" r="8" fill="white" class="animate-ping"/>
        
        <!-- 充电接口/基站抽象 -->
        <rect x="340" y="100" width="10" height="120" rx="5" fill="#334155"/>
        <path d="M345 130C345 130 300 130 290 145" stroke="#334155" stroke-width="4" stroke-dasharray="8 4"/>
      </svg>
    </div>
  </div>

  <!-- 左侧文案区域 -->
  <div class="z-20">
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter text-slate-900 leading-tight">
      Decoding <span class="text-emerald-600">China's</span> Automotive Future
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl leading-relaxed">
      Independent research, strategic intelligence, and real-time insights into China's electric vehicle revolution and global expansion strategy.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <!-- 翡翠绿主按钮 -->
      <Link
        href="/blog"
        size="lg"
        class="flex gap-1 items-center justify-center bg-emerald-600 hover:bg-emerald-700 text-white transition border-none px-8 shadow-xl shadow-emerald-100"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-zap" />
        Explore Insights
      </Link>
      <!-- 次按钮 -->
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/about"
        class="flex gap-1 items-center justify-center border-slate-200 hover:border-emerald-600 hover:text-emerald-700 transition px-8 text-slate-800 font-medium">
        <Icon class="w-4 h-4" name="bx:bxs-file-find" />
        Our Mission
      </Link>
    </div>
  </div>
</main>
