---
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";

// 本版本采用“静态智库”架构 SVG：高复杂度、全产业链透视、无动画干扰
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-4 pb-2 md:pt-4 md:pb-4 transition-all">
  
  <!-- 右侧插画区域：静态、高信息密度、高度增加 150% -->
  <div class="py-2 md:order-1 hidden md:block w-full flex justify-center">
    <div class="relative w-full max-w-lg flex items-center justify-center">
      <!-- 底层柔光装饰：稍微拉高范围以匹配新 SVG -->
      <div class="absolute inset-0 bg-emerald-50 rounded-full blur-3xl opacity-20"></div>
      
      <!-- 智库级架构 SVG：400x450 (高度显著增加) -->
      <svg width="400" height="450" viewBox="0 0 400 450" fill="none" xmlns="http://www.w3.org" class="relative z-10 drop-shadow-xl text-emerald-600">
        <!-- 1. 全球化雷达监测背景 (Global Tracking) -->
        <circle cx="200" cy="220" r="180" stroke="currentColor" stroke-width="0.5" stroke-dasharray="4 4" opacity="0.3"/>
        <circle cx="200" cy="220" r="130" stroke="currentColor" stroke-width="0.5" stroke-dasharray="2 2" opacity="0.3"/>
        <line x1="200" y1="40" x2="200" y2="400" stroke="currentColor" stroke-width="0.5" opacity="0.2"/>
        <line x1="20" y1="220" x2="380" y2="220" stroke="currentColor" stroke-width="0.5" opacity="0.2"/>

        <!-- 2. 核心架构：模块化底盘 (Modular Platform) -->
        <rect x="80" y="300" width="240" height="15" rx="4" fill="#334155" opacity="0.8"/>
        <rect x="100" y="285" width="200" height="15" rx="2" fill="currentColor" fill-opacity="0.2" stroke="currentColor" stroke-width="1"/>
        <text x="165" y="297" fill="currentColor" class="text-[8px] font-bold opacity-60">BATTERY CELL-TO-PACK</text>

        <!-- 3. 极简车身流线 (Stylized Silhouette) -->
        <path d="M60 280C60 280 80 180 160 160C240 140 320 180 340 280" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
        <path d="M120 165C120 165 140 100 200 100C260 100 280 165 280 165" stroke="currentColor" stroke-width="2" stroke-dasharray="6 3"/>

        <!-- 4. 传感器与情报监测点 (Intelligence Nodes) -->
        <!-- LiDAR 点 -->
        <rect x="190" y="90" width="20" height="10" rx="2" fill="#334155"/>
        <path d="M200 90V60" stroke="#334155" stroke-width="1"/>
        <circle cx="200" cy="55" r="3" fill="#10b981"/>
        
        <!-- 数据节点 A -->
        <circle cx="100" cy="220" r="5" fill="white" stroke="currentColor" stroke-width="2"/>
        <text x="55" y="224" fill="#64748b" class="text-[9px] font-bold italic">SUPPLY CHAIN</text>
        
        <!-- 数据节点 B -->
        <circle cx="300" cy="220" r="5" fill="white" stroke="currentColor" stroke-width="2"/>
        <text x="310" y="224" fill="#64748b" class="text-[9px] font-bold italic">MARKET DATA</text>

        <!-- 5. 全球化流向箭头 (Export Vector) -->
        <path d="M200 320L200 400M200 400L190 390M200 400L210 390" stroke="#10b981" stroke-width="2" stroke-linecap="round"/>
        <text x="168" y="425" fill="#10b981" class="text-[10px] font-bold uppercase tracking-widest">Global Pivot</text>

        <!-- 6. 核心情报中心 -->
        <rect x="140" y="200" width="120" height="40" rx="4" fill="white" stroke="currentColor" stroke-width="1.5" class="drop-shadow-sm"/>
        <text x="162" y="225" fill="#065f46" class="text-[11px] font-bold" style="font-family: sans-serif;">AUTO CHINA</text>
      </svg>
    </div>
  </div>

  <!-- 左侧文案区域：保持不变 -->
  <div class="z-20">
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter text-slate-900 leading-tight">
      Decoding <span class="text-emerald-600">China's</span> Automotive Future
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl leading-relaxed">
      Independent research, strategic intelligence, and real-time insights into China's electric vehicle revolution and global expansion strategy.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/blog"
        size="lg"
        class="flex gap-1 items-center justify-center bg-emerald-600 hover:bg-emerald-700 text-white transition border-none px-8 shadow-xl shadow-emerald-100"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-zap" />
        Explore Insights
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/about"
        class="flex gap-1 items-center justify-center border-slate-200 hover:border-emerald-600 hover:text-emerald-700 transition px-8 text-slate-800 font-medium">
        <Icon class="w-4 h-4" name="bx:bxs-file-find" />
        Our Mission
      </Link>
    </div>
  </div>
</main>
