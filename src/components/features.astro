---
// src/components/features.astro
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Market Intelligence",
    description:
      "Daily updates on sales data, export trends, and policy shifts within China's dynamic automotive sector.",
    icon: "bx:bxs-bar-chart-alt-2",
  },
  {
    title: "Battery & Tech",
    description:
      "In-depth analysis of solid-state batteries, CTP/CTC structures, and the evolving EV supply chain.",
    icon: "bx:bxs-bolt",
  },
  {
    title: "Software Defined Vehicle",
    description:
      "Tracking the progress of autonomous driving, smart cockpits, and OTA evolution in domestic brands.",
    icon: "bx:bxs-chip",
  },
  {
    title: "Global Expansion",
    description:
      "Strategic reporting on how BYD, Xiaomi, and NIO are navigating international markets and regulations.",
    icon: "bx:bxs-planet",
  },
  {
    title: "Supply Chain Resilience",
    description:
      "Behind-the-scenes looks at CATL, Huawei, and the key players supporting the EV manufacturing ecosystem.",
    icon: "bx:bxs-layer",
  },
  {
    title: "Sustainability Insights",
    description:
      "Measuring the real impact of electrification on global carbon goals and urban transportation.",
    icon: "bx:bxs-leaf",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Industry Insights That Matter
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    AutoChina.org provides the most comprehensive intelligence on the world's leading automotive innovation hub.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <!-- 图标背景改为科技绿 -->
        <div class="mt-1 bg-emerald-600 rounded-full p-2 w-8 h-8 shrink-0 flex items-center justify-center">
          <Icon class="text-white w-5 h-5" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
